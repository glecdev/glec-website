# GLEC Website Environment Variables
# Copy this file to .env.local and fill in your actual values

# Database (Neon PostgreSQL)
DATABASE_URL="postgresql://user:password@host/database?sslmode=require"
DIRECT_URL="postgresql://user:password@host/database?sslmode=require"

# Authentication
JWT_SECRET="your-jwt-secret-minimum-32-characters-long"
NEXTAUTH_SECRET="your-nextauth-secret-minimum-32-characters-long"
NEXTAUTH_URL="http://localhost:3000"

# Email (Resend)
RESEND_API_KEY="re_your_resend_api_key_here"
RESEND_FROM_EMAIL="noreply@glec.io"

# Cloudflare R2 (File Storage)
R2_ACCOUNT_ID="your-cloudflare-account-id"
R2_ACCESS_KEY_ID="your-r2-access-key-id"
R2_SECRET_ACCESS_KEY="your-r2-secret-access-key"
R2_BUCKET_NAME="glec-assets"
R2_PUBLIC_URL="https://assets.glec.io"

# Cloudflare Workers KV (Cache)
KV_NAMESPACE_ID="your-kv-namespace-id"
KV_API_TOKEN="your-kv-api-token"

# Analytics (Optional)
NEXT_PUBLIC_GA_ID=""
NEXT_PUBLIC_HOTJAR_ID=""

# Feature Flags
NEXT_PUBLIC_ENABLE_ANALYTICS="false"
NEXT_PUBLIC_ENABLE_DEMO_MODE="false"

# Admin
ADMIN_EMAIL="admin@glec.io"
ADMIN_PASSWORD_HASH=""

# Google APIs (Meeting System)
# Google Service Account JSON (전체 JSON을 문자열로)
# Google Cloud Console → IAM & Admin → Service Accounts에서 생성
GOOGLE_SERVICE_ACCOUNT_KEY='{"type":"service_account","project_id":"your-project-id","private_key_id":"...","private_key":"-----BEGIN PRIVATE KEY-----\n...\n-----END PRIVATE KEY-----\n","client_email":"...@....iam.gserviceaccount.com","client_id":"...","auth_uri":"https://accounts.google.com/o/oauth2/auth","token_uri":"https://oauth2.googleapis.com/token","auth_provider_x509_cert_url":"https://www.googleapis.com/oauth2/v1/certs","client_x509_cert_url":"..."}'

# Google Calendar ID (기본값: primary)
GOOGLE_CALENDAR_ID="primary"

# Meeting System URLs
SITE_URL="http://localhost:3000"
NEXT_PUBLIC_SITE_URL="http://localhost:3000"

# Cron Job Secret (캘린더 동기화 API 보안)
CRON_SECRET="your_random_secret_here_min_32_chars"

# GLEC Website Environment Variables
# Copy this file to .env.local and fill in your actual values

# Database (Neon PostgreSQL)
DATABASE_URL="postgresql://user:password@host/database?sslmode=require"
DIRECT_URL="postgresql://user:password@host/database?sslmode=require"

# Authentication
JWT_SECRET="your-jwt-secret-minimum-32-characters-long"
NEXTAUTH_SECRET="your-nextauth-secret-minimum-32-characters-long"
NEXTAUTH_URL="http://localhost:3000"

# Email (Resend)
RESEND_API_KEY="re_your_resend_api_key_here"
RESEND_FROM_EMAIL="noreply@glec.io"

# Cloudflare R2 (File Storage)
R2_ACCOUNT_ID="your-cloudflare-account-id"
R2_ACCESS_KEY_ID="your-r2-access-key-id"
R2_SECRET_ACCESS_KEY="your-r2-secret-access-key"
R2_BUCKET_NAME="glec-assets"
R2_PUBLIC_URL="https://assets.glec.io"

# Cloudflare Workers KV (Cache)
KV_NAMESPACE_ID="your-kv-namespace-id"
KV_API_TOKEN="your-kv-api-token"

# Analytics (Optional)
NEXT_PUBLIC_GA_ID=""
NEXT_PUBLIC_HOTJAR_ID=""

# Feature Flags
NEXT_PUBLIC_ENABLE_ANALYTICS="false"
NEXT_PUBLIC_ENABLE_DEMO_MODE="false"

# Admin
ADMIN_EMAIL="admin@glec.io"
ADMIN_PASSWORD_HASH=""
